@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
@model shopify_backend.Pages.Inventory.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.ProductName" class="control-label"></label>
                <input asp-for="Product.ProductName" class="form-control" />
                <span asp-validation-for="Product.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.UnitPrice" class="control-label"></label>
                <input asp-for="Product.UnitPrice" class="form-control" />
                <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Quantity" class="control-label"></label>
                <input asp-for="Product.Quantity" class="form-control" />
                <span asp-validation-for="Product.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.QuantityShipped" class="control-label"></label>
                <input asp-for="Product.QuantityShipped" class="form-control" />
                <span asp-validation-for="Product.QuantityShipped" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.QuantityReceived" class="control-label"></label>
                <input asp-for="Product.QuantityReceived" class="form-control" />
                <span asp-validation-for="Product.QuantityReceived" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.PartNumber" class="control-label"></label>
                <input asp-for="Product.PartNumber" class="form-control" />
                <span asp-validation-for="Product.PartNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                @{ for (int i = 0; i < Model.TagList.Count; i++)
                    {
                        <input asp-for="@Model.TagList[i].Value" type="hidden" />
                        {
                            <input asp-for="@Model.TagList[i].Selected" /> @Model.TagList[i].Text
                        }
                        <br />
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
